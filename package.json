{
  "name": "@skspwork/config-doc",
  "version": "0.3.0",
  "description": "Interactive documentation tool for JSON configuration files (appsettings.json)",
  "keywords": [
    "config",
    "configuration",
    "documentation",
    "appsettings",
    "json",
    "dotnet",
    "cli"
  ],
  "homepage": "https://github.com/skspwork/ConfigDoc#readme",
  "bugs": {
    "url": "https://github.com/skspwork/ConfigDoc/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/skspwork/ConfigDoc.git"
  },
  "license": "MIT",
  "author": "skspwork",
  "bin": {
    "config-doc": "./packages/cli/bin/config-doc.js"
  },
  "publishConfig": {
