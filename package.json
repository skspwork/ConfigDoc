  },
  "files": [
    "packages/cli/bin",
    "packages/cli/package.json",
    "packages/web/app",
    "packages/web/components", 
    "packages/web/lib",
    "packages/web/types",
    "packages/web/public",
    "packages/web/package.json",
    "packages/web/next.config.ts",
    "packages/web/tsconfig.json",
    "LICENSE",
    "README.md"
  ],
  "engines": {
