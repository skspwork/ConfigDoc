{
  "Database": {
    "ConnectionString": "Server=localhost;Database=myapp;User=admin;Password=secret;",
    "Timeout": 30,
    "MaxPoolSize": 100
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "Console": {
      "IncludeScopes": false
    }
  },
  "AppSettings": {
    "ApplicationName": "MyApplication",
    "Version": "1.0.0",
    "Environment": "Development",
    "Features": {
      "EnableCache": true,
      "EnableAnalytics": false,
      "MaxUploadSize": 10485760
    }
  },
  "Email": {
    "SmtpServer": "smtp.example.com",
    "SmtpPort": 587,
    "UseSsl": true,
    "FromAddress": "noreply@example.com"
  }
}
